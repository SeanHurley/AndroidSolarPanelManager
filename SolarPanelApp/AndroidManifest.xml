<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.solarpanelmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock"
        android:uiOptions="splitActionBarWhenNarrow">
        <activity
            android:name="com.teamramrod.solarpanelmanager.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamramrod.solarpanelmanager.MainDeviceActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamramrod.solarpanelmanager.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamramrod.solarpanelmanager.HistoricalGraphActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="org.achartengine.GraphicalActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamramrod.solarpanelmanager.KnownDevicesActivity"
            android:label="@string/title_activity_known_devices"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.teamramrod.solarpanelmanager.ChooseDeviceActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.teamramrod.solarpanelmanager.ApplicationPreferencesActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.teamramrod.solarpanelmanager.DevicePreferencesActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamramrod.solarpanelmanager.HistoryGraphActivity"
            android:label="@string/title_activity_history_graph"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamramrod.solarpanelmanager.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.teamramrod.solarpanelmanager.AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>