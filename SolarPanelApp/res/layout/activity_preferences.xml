<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:summary="General Settings"
        android:title="@string/general_settings" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="power_user"
            android:title="@string/power_user_mode" />
    </PreferenceCategory>
    <PreferenceCategory
        android:summary="@string/power_settings"
        android:title="@string/power_settings_label" >

        <EditTextPreference
            android:defaultValue=""
            android:key="pass_phrase"
            android:dependency="power_user"
            android:title="@string/pass_phrase" />
    </PreferenceCategory>

</PreferenceScreen>